<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackground"
    android:orientation="vertical"
    tools:context=".Activities.About">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/aboutbackpress"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="About"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/about_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:text="Edit"
            tools:ignore="TouchTargetSizeCheck" />

        <Button
            android:id="@+id/about_save"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:backgroundTint="#00FFFFFF"
            android:enabled="false"
            android:text="save"
            android:textStyle="bold"
            tools:ignore="TouchTargetSizeCheck" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:isScrollContainer="false"
        android:nestedScrollingEnabled="false">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Full Name"
                android:textColor="#D8C4C4"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/aboutfullname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:enabled="false"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Gender"
                android:textColor="#D8C4C4"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/about_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:enabled="false"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Religion"
                android:textColor="#D8C4C4"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/about_religion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:enabled="false"
                android:hint="Religion"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Interest"
                android:textColor="#D8C4C4"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/about_interest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:enabled="false"
                android:hint="Interest"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Phone No"
                android:textColor="#D8C4C4"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/about_phoneno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:enabled="false"
                android:hint="Phone Number"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Bio"
                android:textColor="#D8C4C4"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/about_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:enabled="false"
                android:hint="Bio"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textColor="#000000" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Country"
                android:textColor="#D8C4C4"
                android:textSize="24sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/about_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:background="@drawable/edittextbg"
                android:ems="10"
                android:enabled="false"
                android:hint="Country"
                android:inputType="textPersonName"
                android:padding="13dp"
                android:textColor="#000000" />


        </androidx.appcompat.widget.LinearLayoutCompat>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>